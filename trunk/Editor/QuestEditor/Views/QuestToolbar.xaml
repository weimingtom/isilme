<wpf:ToolBar x:Class="QuestEditor.Views.QuestToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             xmlns:local="clr-namespace:QuestEditor.Views"
             mc:Ignorable="d">
    
    <Button Command="local:QuestEditorWindow.AddQuest">
        <Button.Content>
            <Image Source="/QuestEditor;component/Resources/quest_add.png" Style="{DynamicResource ResourceKey=ToolImageStyle}"></Image>        
        </Button.Content>
    </Button>
    <Button Command="local:QuestEditorWindow.AddStage">
        <Button.Content>
            <Image Source="/QuestEditor;component/Resources/stage_add.png" Style="{DynamicResource ResourceKey=ToolImageStyle}"></Image>
        </Button.Content>
    </Button>
</wpf:ToolBar>
